@model BiblotekaWeb.Areas.admin.ViewModels.LoginViewModel

@{
    Layout = null;
    var returnUrl = ViewBag.ReturnUrl as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Kyqja - eBiblioteka</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/Admin/img/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&display=swap">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Admin/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="/Admin/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/Admin/plugins/fontawesome/css/all.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/Admin/css/style.css">

</head>
<body>
<!-- Main Wrapper -->
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <h2 style="color: white">e-Biblioteka</h2>
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Kyqu</h1>
                            <p class="account-subtitle">Qasja në panelin e kontrollit</p>
                            <!-- Form -->
                            <form  asp-action="Login" asp-route-returnUrl="@returnUrl" >
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Username" class="form-control" placeholder="Përdoruesi">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Fjalëkalimi">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">Kyqu</button>
                                </div>
                            </form>
                            <!-- /Form -->

                            <div class="text-center forgotpass"><a href="forgot-password.html">Keni harruar fjalëkalimin?</a></div>
                            <div class="login-or">
                                <span class="or-line"></span>
                                <span class="span-or">ose</span>
                            </div>
                            <!-- Social Login -->
                            <div class="social-login">
                                <span>Kyqu me</span>
                                <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a><a href="#" class="google"><i class="fab fa-google"></i></a>
                            </div>
                            <!-- /Social Login -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="/Admin/js/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="/Admin/js/popper.min.js"></script>
    <script src="/Admin/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="/Admin/js/script.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>
