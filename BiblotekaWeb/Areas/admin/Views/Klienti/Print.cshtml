@model IEnumerable<BiblotekaWeb.Areas.admin.Models.Klienti>

@{
    ViewBag.Title = "Raporti Klientëve";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="/favico.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Admin/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Fontawesome CSS -->
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Admin/css/style.css">
</head>
<body>
<h1 class="text-center">Lista e Klientëve</h1>
<h4 style="margin-top: 100px;">Data: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss")</h4>
<h4>Gjeneruar Nga: @ViewData["Stafi"]</h4>
<table class="table" style="margin-top: 50px;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Emri</th>
        <th>Datalindjes</th>
        <th>NrPersonal</th>
        <th>Adresa</th>
        <th>Emaili</th>
        <th>Huazimet</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr class="text-center">
            <td colspan="8">
                <span>Nuk ka Klientë të regjistruar!</span>
            </td>
        </tr>
    }
    else
    {
        @foreach (var klient in Model)
        {
            <tr>
                <td>@klient.KlientiId</td>
                <td>
                    <h2 class="table-avatar">
                        <a>@klient.Emri @klient.Mbiemri</a>
                    </h2>
                </td>
                <td>@klient.Datalindjes.ToString("dd/MM/yyyy")</td>
                <td>@klient.NrPersonal</td>
                <td>@klient.Adresa</td>
                <td>@klient.Emaili</td>
                <td>@klient.Huazimet</td>
            </tr>
        }
    }
    </tbody>
</table>
<p class="mt-2 text-right">Total Klientë: @Model.Count()</p>

<script src="~/Admin/js/jquery-3.5.1.min.js"></script>
<script src="~/Admin/js/popper.min.js"></script>
<script src="~/Admin/plugins/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

