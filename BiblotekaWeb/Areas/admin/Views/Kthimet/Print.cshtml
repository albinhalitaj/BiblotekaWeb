@model IEnumerable<BiblotekaWeb.Areas.admin.Models.Huazimi>

@{
    ViewData["Title"] = "Raporti i Huazimeve";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/Admin/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Admin/css/style.css">
</head>
<body>
<h1 class="text-center">Lista e Kthimeve</h1>
<h4 style="margin-top: 100px;">Data: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss")</h4>
<h4>Gjeneruar Nga: @ViewData["Stafi"]</h4>
<table class="table" style="margin-top: 50px;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Klienti</th>
        <th>Libri</th>
        <th>Data Huazimit</th>
        <th>Data Kthimit</th>
        <th>Sasia</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr class="text-center">
            <td colspan="8">
                <span>Nuk ka Kthime tÃ« regjistruar!</span>
            </td>
        </tr>
    }
    else
    {
        @foreach (var kthim in Model)
        {
            <tr>
                <td>@kthim.HuazimiId</td>
                <td>
                    <h2 class="table-avatar">
                        <a>@kthim.Klienti.Emri @kthim.Klienti.Mbiemri</a>
                    </h2>
                </td>
                <td>@kthim.Libri.Titulli</td>
                <td>@kthim.DataHuazimi.ToString("dd/MM/yyyy")</td>
                <td>@kthim.DataKthimit.ToString("dd/MM/yyyy")</td>
                <td>@kthim.NumriKopjeve</td>
            </tr>
        }
    }
    </tbody>
</table>
<p class="mt-2 text-right">Total Kthime: @Model.Count()</p>

<script src="~/Admin/js/jquery-3.5.1.min.js"></script>
<script src="~/Admin/js/popper.min.js"></script>
<script src="~/Admin/plugins/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
