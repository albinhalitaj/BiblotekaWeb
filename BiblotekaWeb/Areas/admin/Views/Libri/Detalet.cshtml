                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Statusi" /> @Html.DisplayNameFor(model => model.Statusi)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Ruaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kthehu te Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
