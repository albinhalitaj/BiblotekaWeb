            <div class="form-group">
                <label asp-for="NumriKopjeve" class="control-label"></label>
                <input asp-for="NumriKopjeve" class="form-control" />
                <span asp-validation-for="NumriKopjeve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
