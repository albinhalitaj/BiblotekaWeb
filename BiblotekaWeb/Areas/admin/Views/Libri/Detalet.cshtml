@model BiblotekaWeb.Areas.admin.Models.Libri

@{
    ViewData["Title"] = "Detalet";
}

<h1>Detalet</h1>

<h4>Libri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
