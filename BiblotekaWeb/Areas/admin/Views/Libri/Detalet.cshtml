            </div>
            <div class="form-group">
                <label asp-for="Titulli" class="control-label"></label>
                <input asp-for="Titulli" class="form-control" />
                <span asp-validation-for="Titulli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autori" class="control-label"></label>
                <input asp-for="Autori" class="form-control" />
                <span asp-validation-for="Autori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Botuesi" class="control-label"></label>
                <input asp-for="Botuesi" class="form-control" />
                <span asp-validation-for="Botuesi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gjuha" class="control-label"></label>
                <input asp-for="Gjuha" class="form-control" />
                <span asp-validation-for="Gjuha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriaId" class="control-label"></label>
                <input asp-for="KategoriaId" class="form-control" />
                <span asp-validation-for="KategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editioni" class="control-label"></label>
                <input asp-for="Editioni" class="form-control" />
                <span asp-validation-for="Editioni" class="text-danger"></span>
