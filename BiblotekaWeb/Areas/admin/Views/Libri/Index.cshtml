@model IEnumerable<BiblotekaWeb.Areas.admin.Models.Libri>

@{
    ViewData["Title"] = "Lista e Librave";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Librat</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Ballina</a></li>
                        <li class="breadcrumb-item active">Librat</li>
                    </ul>
                </div>
                <div class="col-auto text-right float-right ml-auto">
                    <a href="#" class="btn btn-outline-primary mr-2"><i class="fas fa-download"></i> Shkarko</a>
                    <a asp-controller="Libri" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Titulli</th>
                                        <th>Autori</th>
                                        <th>Botuesi</th>
                                        <th>Gjuha</th>
                                        <th>Kategoria</th>
                                        <th>Editioni</th>
                                        <th>ISBN</th>
                                        <th>NumriKopjeve</th>
                                        <th>Statusi</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    @foreach (var liber in Model)
                                    {
                                        <td>@liber.LibriId</td>
                                        <td>
                                            <h2>
                                                <a>@liber.Titulli</a>
                                            </h2>
                                        </td>
                                        <td>@liber.Autori</td>
                                        <td>@liber.Botuesi</td>
                                        <td>@liber.Gjuha.Emertimi</td>
                                        <td>@liber.Kategoria.Emertimi</td>
                                        <td>@liber.Editioni</td>
                                        <td>@liber.Isbn</td>
                                        <td>@liber.NumriKopjeve</td>
                                        @if (liber.Statusi)
                                        {
                                            <td>
                                                <span class="badge badge-success">Aktiv</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge badge-danger">Joaktiv</span>
                                            </td>
                                        }
                                        <td class="text-right">
                                            <div class="actions">
                                                <a asp-action="Edito" asp-route-id="@liber.LibriId" class="btn btn-sm bg-success-light mr-2">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@liber.LibriId" class="btn btn-sm bg-danger-light">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <p>Copyright © 2021 Menaxhimi Biblotekës.</p>
    </footer>
</div>
