@model IEnumerable<BiblotekaWeb.Areas.admin.Models.Libri>

@{
    ViewData["Title"] = "Raporti i Librave";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/Admin/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Admin/css/style.css">
</head>
<body>
<h1 class="text-center">Lista e Librave</h1>
<h4 style="margin-top: 100px;">Data: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss")</h4>
<h4>Gjeneruar Nga: @ViewData["Stafi"]</h4>
<table class="table" style="margin-top: 50px;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Titulli</th>
        <th>Autori</th>
        <th>Botuesi</th>
        <th>Gjuha</th>
        <th>Kategoria</th>
        <th>Editioni</th>
        <th>Sasia</th>
        <th>Statusi</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr class="text-center">
            <td colspan="8">
                <span>Nuk ka Libra tÃ« regjistruar!</span>
            </td>
        </tr>
    }
    else
    {
        @foreach (var liber in Model)
        {
            <tr>
                <td>@liber.LibriId</td>
                <td>
                    <h2 class="table-avatar">
                        <a>@liber.Titulli</a>
                    </h2>
                </td>
                <td>@liber.Autori</td>
                <td>@liber.Botuesi</td>
                <td>@liber.Gjuha.Emertimi</td>
                <td>@liber.Kategoria.Emertimi</td>
                <td>@liber.Editioni</td>
                <td>@liber.NumriKopjeve</td>
                @if (liber.Statusi)
                {
                    <td>
                        <span class="badge badge-success">Aktiv</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="badge badge-danger">Joaktiv</span>
                    </td>
                }
            </tr>
        }
    }
    </tbody>
</table>
<p class="mt-2 text-right">Total Libra: @Model.Count()</p>

<script src="~/Admin/js/jquery-3.5.1.min.js"></script>
<script src="~/Admin/js/popper.min.js"></script>
<script src="~/Admin/plugins/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
